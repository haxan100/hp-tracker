<% title = 'Import Bulanan' %>
<% active = 'import' %>

<div class="container mt-5" style="max-width: 720px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="mb-4 text-center">Import Transaksi HP (Excel)</h3>

      <form action="/import" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Bulan:</label>
          <select name="bulan" class="form-select" required>
            <% for (let i = 1; i <= 12; i++) { %>
              <option value="<%= i %>" <%= i === new Date().getMonth() + 1 ? 'selected' : '' %>>
                <%= new Date(0, i - 1).toLocaleString('default', { month: 'long' }) %>
              </option>
            <% } %>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Tahun:</label>
          <input type="number" name="tahun" class="form-control" value="<%= new Date().getFullYear() %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Admin Fee:</label>
          <input type="number" name="admin" class="form-control" placeholder="Contoh: 200000" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Ongkir:</label>
          <input type="number" name="ongkir" class="form-control" placeholder="Contoh: 100000" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Upload File Excel:</label>
          <input type="file" name="file" class="form-control" accept=".xlsx" required>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary px-4">Import</button>
        </div>
      </form>
    </div>
  </div>
</div>
